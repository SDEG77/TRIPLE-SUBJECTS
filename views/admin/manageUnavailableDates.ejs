<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Unavailable Dates</title>
    <link rel="icon" href="/assets/img/arklogo.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <script src="https://kit.fontawesome.com/aed89df169.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Island+Moments&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        * {
            font-family: 'Poppins';
            color: white;
        }

        body {
            background-color: #121212;
            margin: 0 auto;
            padding: 0;
            display: flex;
            transition: margin-left 0.3s;
        }

        #sidebar {
            background-color: #262626;
            transition: transform 0.3s ease;
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
        }

        .sidebar-hidden {
            transform: translateX(-100%);
        }

        .content {
            flex: 1;
            transition: margin-left 0.3s;
            margin-left: 16rem;
            padding: 1.5rem;
        }

        .sidebar-hidden-content {
            margin-left: 0;
        }

        button[type="submit"] {
            background-color: #F6DE03;
            color: #121212;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        button[type="submit"]:hover {
            background-color: #d5c502;
        }
        #sidebar{
            position: fixed;
            height: 100vh;
        }
    </style>
</head>

<body>
    <div id="sidebar" class="w-65 h-screen bg-gray-800 text-white flex flex-col justify-between">
        <div>
            <div class="p-2 flex flex-col items-center justify-center border-b-[3px] border-[#F6DE03] relative">
                <p class="flex items-center uppercase text-[#F6DE03] font-semibold"><img src="/assets/img/arkvisionlogo.png" alt="" class="w-[80px] -mr-3">Ark Visions</p>
                <p class="text-[10px] absolute right-12 bottom-3">See the difference</p>
            </div>
            <nav class="">
                <a href="/ark/admin" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700"><i class="fa-solid fa-house mr-4"></i> Dashboard</a>
                <a href="/ark/admin/clients" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700"><i class="fa-solid fa-users mr-4"></i> Clients</a>
                <a href="/ark/admin/bookings" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700"><i class="fa-solid fa-calendar-days mr-4"></i> Bookings</a>
                <a href="/ark/admin/indexmanager" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700"><i class="fa-solid fa-images mr-4"></i> Index Manager</a>
                <a href="/ark/admin/photo-management" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700"><i class="fa-solid fa-image mr-4"></i> Photo Management</a>
                <a href="/ark/admin/resource" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700"><i class="fa-solid fa-box mr-4"></i> Resource Control Center</a>
                <a href="/ark/admin/feedback" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700"><i class="fa-solid fa-message mr-4"></i> Feedback</a>
                <a href="/ark/admin/documentation" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700"><i class="fa fa-file-text mr-4"></i> Documentation</a>
                <a href="/ark/admin/manage-unavailable-dates" class="block py-4 px-5 rounded transition duration-200 bg-gradient-to-r from-[#F6DE03] to-[#dbe043] text-gray-800"><i class="fa-solid fa-calendar-times mr-4 text-gray-800"></i> Manage Unavailable Dates</a>
            </nav>
        </div>
        <div>
            <a href="/ark/admin/logout" class="block py-4 px-5 rounded transition duration-200 hover:bg-red-600"><i class="fa-solid fa-sign-out-alt mr-2"></i> Logout</a>
        </div>
    </div>

    <main class="content">
        <button id="toggleSidebar" class="p-4 text-yellow-500 ml-6">
            <i class="fa-solid fa-bars fa-2xl"></i>
        </button>

        
        <div class="p-5 ml-6">
            <h2 class="text-2xl font-semibold text-yellow-500">Manage Unavailable Dates</h2>
        </div>

        <form id="unavailableDatesForm" class="mt-4 p-5 bg-gray-800 rounded-lg ml-6">
            <div class="mb-4">
                <label for="date" class="block text-yellow-500 font-semibold mb-2">Date:</label>
                <input type="date" id="date" name="date" required class="w-full p-2 bg-gray-700 text-white rounded">
            </div>

            <div class="mb-4">
                <label for="timeSlots" class="block text-yellow-500 font-semibold mb-2">Unavailable Times:</label>
                <select id="timeSlots" name="timeSlots" multiple class="w-full p-2 bg-gray-700 text-white rounded">
                    <option value="8:00 AM to 9:00 AM">8:00 AM - 9:00 AM</option>
                    <option value="9:00 AM to 10:00 AM">9:00 AM - 10:00 AM</option>
                    <option value="10:00 AM to 11:00 AM">10:00 AM - 11:00 AM</option>
                    <option value="11:00 AM to 12:00 PM">11:00 AM - 12:00 PM</option>
                    <option value="1:00 PM to 2:00 PM">1:00 PM - 2:00 PM</option>
                    <option value="2:00 PM to 3:00 PM">2:00 PM - 3:00 PM</option>
                    <option value="3:00 PM to 4:00 PM">3:00 PM - 4:00 PM</option>
                </select>
            </div>

            <button type="submit" class="bg-yellow-500 text-gray-900 px-4 py-2 rounded font-semibold hover:bg-yellow-600 transition duration-300">Add Unavailable Date</button>
        </form>
    </main>

    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleButton = document.getElementById('toggleSidebar');
        const content = document.querySelector('.content');

        toggleButton.addEventListener('click', () => {
            sidebar.classList.toggle('sidebar-hidden');
            content.classList.toggle('sidebar-hidden-content');
        });

        document.getElementById("unavailableDatesForm").addEventListener("submit", async (e) => {
            e.preventDefault();
            const date = document.getElementById("date").value;
            const timeSlots = Array.from(document.getElementById("timeSlots").selectedOptions).map(option => option.value);

            try {
                const response = await fetch('/ark/admin/unavailable-dates', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ date, timeSlots })
                });

                const result = await response.json();
                if (response.ok) {
                    alert("Unavailable date added successfully!");
                } else {
                    alert("Error: " + result.message);
                }
            } catch (error) {
                console.error("Error adding unavailable date:", error);
            }
        });
    </script>
</body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin</title>
  <link rel="icon" href="pics/logo.jpg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <script src="https://kit.fontawesome.com/aed89df169.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Island+Moments&display=swap" rel="stylesheet" />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap"
    rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    * {
      font-family: "Poppins";
      color: white;
    }

    body {
      background-color: #121212;
      margin: 0 auto;
      padding: 0;
      display: flex;
      transition: margin-left 0.3s;
    }

    #sidebar {
      background-color: #262626;
      transition: transform 0.3s ease;
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
    }

    .sidebar-hidden {
      transform: translateX(-100%);
    }

    .content {
      flex: 1;
      transition: margin-left 0.3s;
      margin-left: 16rem;
    }

    .sidebar-hidden-content {
      margin-left: 0;
    }

    .image-preview {
      margin-top: 10px;
      max-width: 100%;
      max-height: 200px;
      display: none;
    }
  </style>
</head>

<body>
  <div id="sidebar" class="fixed w-64 h-screen bg-gray-800 text-white flex flex-col justify-between">
    <div>
      <div class="m-7 flex justify-center">
        <img class="rounded-full w-28" src="/assets/logo.jpg" alt="Logo" />
      </div>
      <nav class="mt-10 border-t-4 border-yellow-500">
        <a href="/ark/admin"
          class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
          <i class="fa-solid fa-house mr-4"></i> Dashboard
        </a>
        <a href="/ark/admin/clients"
          class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
          <i class="fa-solid fa-users mr-4"></i> Clients
        </a>
        <a href="/ark/admin/bookings"
          class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
          <i class="fa-solid fa-calendar-days mr-4"></i> Bookings
        </a>
        <a href="/ark/admin/photo-management"
          class="block py-4 px-5 rounded transition duration-200 text-gray-800 bg-yellow-500">
          <i class="fa-solid fa-image mr-4 text-gray-800"></i> Photo
          Management
        </a>
        <a href="/ark/admin/resource"
          class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
          <i class="fa-solid fa-box mr-4"></i> Resource Control Center
        </a>
        <a href="/ark/admin/feedback"
          class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
          <i class="fa-solid fa-message mr-4"></i> Feedback
        </a>
      </nav>
    </div>
    <div>
      <a href="/ark/admin/logout" class="block py-4 px-5 rounded transition duration-200 hover:bg-red-600">
        <i class="fa-solid fa-sign-out-alt mr-2"></i> Logout
      </a>
    </div>
  </div>

  <main class="content h-[100vh] overflow-auto">
    <button id="toggleSidebar" class="p-4 text-yellow-500">
      <i class="fa-solid fa-bars"></i>
    </button>

    <div class="p-5">
      <h2 class="text-2xl font-semibold text-yellow-500">
        Manage Clients' Albums
      </h2>

      <div class="mt-4 space-y-6">
        <% clients.forEach(function(client) { %>
          <div class="border border-gray-700 p-4 rounded-lg bg-gray-700">
            <h3 class="text-[12px] font-regular">CLIENT'S ID: <%= client.id %>
            </h3>
            <p class="text-[20px] font-semibold uppercase text-[#F6DE03] tracking-tight">
              Client's Name: <%= client.fname %>
                <%= client.lname %>
            </p>

            <form action="/ark/upload-image" method="POST" enctype="multipart/form-data">
              <input type="hidden" name="clientId" value="<%= client.id %>" />

              <div class="mt-4">
                <input type="file" id="uploadImageClient<%= client.id %>" name="image" accept="image/*"
                  class="hidden" />
                <label for="uploadImageClient<%= client.id %>"
                  class="cursor-pointer bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">
                  <i class="fa-solid fa-upload"></i> Upload Image
                </label>
                <button type="submit" class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded ml-4">
                  <i class="fa-solid fa-upload"></i> Submit Image
                </button>
              </div>
              <img id="imagePreviewClient<%= client.id %>" class="image-preview" alt="Image Preview" />
            </form>

            <h1 class="mt-5 uppercase text-[#F6DE03] font-bold tracking-[2px]">
              Client's Album
            </h1>

            <div class="grid grid-cols-6 gap-1 mt-4">
              <% let hasPhotos = false; %>
              <% photos.forEach(function(photo) { %>
                <% if (photo.clientId.toString()===client.id.toString()) { %>
                  <div class="relative">
                    <img src="<%= '/uploads/' + photo.filename %>" alt="Client Photo"
                      class="w-[200px] hover:grayscale h-auto rounded-lg" />
                    <form action="/ark/admin/photo-management/delete" method="POST" class="absolute top-0 right-0">
                      <input type="hidden" name="id" value="<%= photo._id %>" />
                      <button type="submit" onclick="return confirm('Are you sure you want to delete this photo?')"
                        class="bg-red-500 hover:bg-red-600 text-white py-1 px-2 rounded">
                        <i class="fa-solid fa-trash"></i>
                      </button>
                    </form>
                  </div>
                  <% hasPhotos = true; %>
                <% } %>
              <% }) %>
            
              <% if (!hasPhotos) { %>
                <p class="col-span-6 text-gray-500">No photos uploaded yet for this client.</p>
              <% } %>
            </div>
            
          </div>

          <script>
            document.addEventListener("DOMContentLoaded", function () {
              const fileInput = document.getElementById(
                "uploadImageClient<%= client.id %>"
              );
              const previewImage = document.getElementById(
                "imagePreviewClient<%= client.id %>"
              );

              fileInput.addEventListener("change", function () {
                const file = fileInput.files[0];
                if (file) {
                  const reader = new FileReader();
                  reader.onload = function (e) {
                    previewImage.src = e.target.result;
                    previewImage.style.display = "block";
                  };
                  reader.readAsDataURL(file);
                } else {
                  previewImage.style.display = "none";
                }
              });
            });
          </script>
          <% }) %>
      </div>
    </div>
  </main>

  <script>
    const sidebar = document.getElementById("sidebar");
    const toggleButton = document.getElementById("toggleSidebar");
    const content = document.querySelector(".content");

    toggleButton.addEventListener("click", () => {
      sidebar.classList.toggle("sidebar-hidden");
      content.classList.toggle("sidebar-hidden-content");
    });
  </script>
</body>

</html>
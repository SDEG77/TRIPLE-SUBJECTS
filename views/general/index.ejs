    document.addEventListener('DOMContentLoaded', function() {
        let combinedSlide = 0;
        function moveCombinedCarousel(direction) {
            const carousel = document.getElementById('combinedCarousel');
            const totalSlides = carousel.children.length;
            const cardWidth = 500; // 300px is the width of each card
            combinedSlide += direction;

            // Ensure the slide index stays within bounds
            if (combinedSlide < 0) {
                combinedSlide = totalSlides - 1;
            } else if (combinedSlide >= totalSlides) {
                combinedSlide = 0;
            }

            // Update the carousel's transform property to slide
            const offset = -combinedSlide * cardWidth;
            carousel.style.transform = `translateX(${offset}px)`;
        }

        // Bind the function to the window so it can be accessed by the buttons
        window.moveCombinedCarousel = moveCombinedCarousel;
    });
</script>

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <script src="https://kit.fontawesome.com/aed89df169.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Island+Moments&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
    <title>Ark Vision</title>
</head>
<style>
    * {
        font-family: 'Poppins';
    }
    header {
        background-color: #F6DE03;
    }
    body {
        background-color: #121212;
    }
    header button {
        border: 1px solid black;
    }
    .island {
        font-family: 'Island Moments', cursive;
    }
    .gallery-item {
        transition: transform 0.2s ease-in-out;
    }
    .gallery-item:hover {
        transform: scale(1.05);
    }
</style>
<body class="overflow-x-hidden flex flex-col">
    <!-- Navigation Bar -->
    <%- include('../components/client-navbar') %>

    <!-- Container for sidebar and gallery -->
    <div class="flex flex-col mt-[150px] px-[15%] gap-10 md:flex-row items-center md:items-start md:justify-center ">
        <div class="fle flex-col gap-5  p-4 rounded-[20px] w-fit md:w-1/4 h-fit ">
            <div class="flex items-center gap-2">
         
                <div>
                    <h1 class="text-[14px] text-white">
                        <% try{ %>
                            <%= name %>
                        <% }catch{} %>
                    </h1>
                    <p class="text-[10px] text-gray-400">
                        <% try{ %>
                            <%= email %>
                        <% }catch{} %>
                    </p>
                </div>
            </div>
            <hr class="border-[1px] border-[#F6DE03] mt-5">

            <div class="flex flex-col gap-3">
                <a href="/ark/client/profile" class="flex mt-5 hover:bg-gray-800 hover:text-white p-2 items-center gap-2 transition duration-200 ease-out hover:ease-in text-gray-400">
                    <i class="fa-solid fa-user"></i> My Profile
                </a>
                <a href="/ark/client/gallery" class="flex  text-[#F6DE03] relative p-2 items-center gap-2">
                    <i class="fa-solid fa-image"></i> Gallery
                    <span class="absolute right-2 text-[20px] bottom-1">></span>
                </a>
                <a href="/ark/client/history" class="flex hover:bg-gray-800 hover:text-white p-2 items-center gap-2 transition duration-200 ease-out hover:ease-in text-gray-400"><i class="fa-solid fa-clock-rotate-left"></i>History </a>
                <a href="/ark/client/logout" class="flex hover:bg-gray-800 hover:text-white p-2 items-center gap-2 transition duration-200 ease-out hover:ease-in text-gray-400">
                    <i class="fa-solid fa-power-off "></i> Logout
                </a>
            </div>
        </div>

        <!-- Gallery Section -->
        <div class="rounded-[20px] w-fit md:w-3/4  px-8">
            <h1 class="text-[24px] text-white font-bold uppercase">Album</h1>
            <hr class="border-[2px] border-gray-700">
            <div class="mt-5 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-5">
                <% if (photo.length > 0) { %>
                    <% photo.forEach(function(img) { %>
                        <div class="relative">
                            <img src="/uploads/<%= img.filename %>" alt="<%= img.filename %>" class="gallery-item w-full h-auto object-cover">
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-gray-400">No photos available</p>
                <% } %>
            </div>
        </div>
        
        
    </div>

    <!-- Footer -->
    <%- include('../components/client-footer') %>
    <!-- End of Footer -->

</body>
</html>
